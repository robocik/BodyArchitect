<UserControl x:Class="BodyArchitect.WP7.UserControls.ChangeStatusControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="480" d:DesignWidth="480" >
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource CustomChromeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Path=Localizedresources.ChangeStatusControl_Status,Mode=OneTime, Source={StaticResource LocalizedStrings}}" Style="{StaticResource CustomTextTitle2Style}"/>
        <TextBox InputScope="Chat" Name="txtComment" TextWrapping="Wrap" AcceptsReturn="True" Height="200" Grid.Row="1"/>
    </Grid>
</UserControl>
