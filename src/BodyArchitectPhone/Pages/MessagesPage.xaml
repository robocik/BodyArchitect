                        <ScrollViewer  Grid.Row="1" >
                            <!-- conversation view -->
                            <ItemsControl ItemsSource="{Binding Invitations}" ItemTemplate="{StaticResource invitationTemplate}" Name="lstInvitations" local:ListAnimation.IsPivotAnimated="True">
